        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="34.6dp"
            android:layout_marginTop="6.5dp"
            android:layout_marginRight="33.6dp"
            android:gravity="bottom"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <com.hbb20.CountryCodePicker
                    android:id="@+id/countryCodePicker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:ccp_areaCodeDetectedCountry="true"
                    app:ccp_autoDetectCountry="true"
                    app:ccp_autoDetectLanguage="true"
                    app:ccp_contentColor="@color/White"
                    app:ccp_defaultLanguage="ENGLISH"
                    app:ccp_rememberLastSelection="true"
                    app:ccp_showFlag="false"
                    app:ccp_showNameCode="false"
                    app:ccp_textSize="16sp" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:orientation="vertical">

                <com.ahmed.homeservices.customfonts.EditText_Roboto_Regular
                    android:id="@+id/etPhoneLogin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#00000000"
                    android:drawableLeft="@drawable/user"
                    android:drawablePadding="10dp"
                    android:hint="Phone number"
                    android:inputType="text"
                    android:textColor="#ffffff"
                    android:textColorHint="#ffffff"
                    android:textSize="14.4sp" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="6.5dp"
                    android:background="#33ffffff" />


            </LinearLayout>

        </LinearLayout>


        <com.ahmed.homeservices.customfonts.EditText_Roboto_Regular
            android:id="@+id/etPassLoin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="34.6dp"
            android:layout_marginTop="33.6dp"
            android:layout_marginRight="33.6dp"
            android:background="#00000000"
            android:drawableLeft="@drawable/pass"
            android:drawablePadding="10dp"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff"
            android:textSize="14.4sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="34.6dp"
            android:layout_marginTop="6.5dp"
            android:layout_marginRight="33.6dp"
            android:background="#33ffffff" />

        <RelativeLayout
            android:id="@+id/rlLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100">

            <LinearLayout
                android:id="@+id/llBack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone"
                android:weightSum="100">


                <com.ahmed.homeservices.customfonts.MyTextView_Roboto_Regular
                    android:id="@+id/login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="34.6dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="50"
                    android:background="@drawable/rectangle"
                    android:gravity="center_horizontal"
                    android:padding="16.4dp"
                    android:text="LOGIN"
                    android:textColor="#ffffff"
                    android:textSize="13.3sp"
                    android:visibility="visible" />


                <com.ahmed.homeservices.customfonts.MyTextView_Roboto_Regular
                    android:id="@+id/verifyEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginRight="33.6dp"
                    android:layout_weight="50"
                    android:background="@drawable/rectangle_green"
                    android:gravity="center_horizontal"
                    android:padding="16.4dp"
                    android:text="Verify now"
                    android:textColor="#ffffff"
                    android:textSize="13.3sp"
                    android:visibility="visible" />


            </LinearLayout>

            <com.github.ybq.android.spinkit.SpinKitView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/progressLogin"
                style="@style/SpinKitView.Small.ThreeBounce"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="gone"
                app:SpinKit_Color="@color/White"

                />

            <com.ahmed.homeservices.customfonts.MyTextView_Roboto_Regular
                android:id="@+id/loginMain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="34.6dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="33dp"
                android:layout_weight="50"
                android:background="@drawable/rectangle"
                android:gravity="center_horizontal"
                android:padding="16.4dp"
                android:text="LOGIN"
                android:textColor="#ffffff"
                android:textSize="13.3sp"
                android:visibility="visible" />


        </RelativeLayout>

        <TextView
            android:id="@+id/tvForgotPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="15dp"
            android:text="Forgot password?"
            android:textColor="@color/OrangeRed"

            />

    </LinearLayout>

