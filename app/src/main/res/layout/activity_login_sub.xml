    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/llLogin"
        android:layout_marginLeft="34.6dp"
        android:layout_marginTop="30.7dp"
        android:layout_marginRight="33.6dp"
        android:layout_marginBottom="23dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="0dp"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="100">


            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="40"
                android:background="@color/orangered" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="20"
                android:gravity="center"
                android:text="Or"
                android:textColor="@color/orangered"
                android:textSize="20sp"
                android:textStyle="bold" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="40"

                android:background="@color/orangered" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/loginUsingFacebook"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/rectangle_1"
                android:padding="15dp"
                android:src="@drawable/facebook" />

            <ImageView
                android:id="@+id/loginUsingGoogle"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/google_bg"
                android:padding="17dp"
                android:src="@drawable/google" />
        </LinearLayout>


        <com.facebook.login.widget.LoginButton
            android:id="@+id/login_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:visibility="gone"


            />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/Linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="28.1dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <com.ahmed.homeservices.customfonts.MyTextView_Roboto_Regular
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Don't have an account?"
            android:textColor="#ffffff"
            android:textSize="14.4sp" />

        <com.ahmed.homeservices.customfonts.MyTextView_Roboto_Regular
            android:id="@+id/signUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:padding="10dp"
            android:text="Sign Up"
            android:textColor="#d22532"
            android:textSize="14.4sp" />
    </LinearLayout>


</RelativeLayout>
